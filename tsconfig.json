{
    "compilerOptions": {
      "target": "es6",
      "module": "ES6",
      "moduleResolution": "bundler",
      "strict": false,                         
      "esModuleInterop": true,               
      "skipLibCheck": true,                  
      "forceConsistentCasingInFileNames": true,
      "outDir": "./HTML/assets/js",          
      "rootDir": "./src/assets/ts",
    },
    "include": [
      "src/assets/ts/**/*"                   
    ],
    "exclude": [
      "node_modules",
      "src/assets/ts/library"             
    ]
  }
  